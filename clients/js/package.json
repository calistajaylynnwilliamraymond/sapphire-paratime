{
  "name": "@oasisprotocol/sapphire-paratime",
  "license": "Apache-2.0",
  "version": "1.0.0",
  "description": "The Sapphire ParaTime Web3 integration library.",
  "repository": "https://github.com/oasisprotocol/sapphire-paratime",
  "keywords": [
    "sapphire",
    "paratime",
    "oasis",
    "web3"
  ],
  "files": [
    "lib",
    "src"
  ],
  "sideEffects": false,
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/cjs/index.d.ts",
  "exports": {
    "node": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    },
    "default": "./lib/esm/index.js"
  },
  "scripts": {
    "lint": "prettier --check . && eslint --ignore-path .gitignore .",
    "format": "prettier --write . && eslint --ignore-path .gitignore --fix .",
    "build": "tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "build:esm": "tsc -p ./tsconfig.json",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.6.1",
    "@ethersproject/abstract-signer": "^5.6.2",
    "@ethersproject/bignumber": "^5.6.2",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/providers": "^5.6.8",
    "@ethersproject/rlp": "^5.6.1",
    "@ethersproject/transactions": "^5.6.2",
    "cborg": "^1.9.4",
    "deoxysii": "^0.0.2",
    "js-sha512": "^0.8.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.4",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "^5.6.9",
    "jest": "^28.1.3",
    "nock": "^13.2.9",
    "node-fetch": "^2.6.7",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "type-fest": "^2.18.0",
    "typescript": "^4.7.4"
  }
}
